@model cumulative_assingment_1.Models.Teacher

<div id="containershow">
    <nav>
        <a class="navlink" href="/TeacherPage/Show/@Model.TeacherId">Back</a>
    </nav>
    <h2>New Teacher</h2>
    <form name="updateform" method="POST" action="/TeacherPage/Update/@Model.TeacherId">
        <div class="inputrow">
            <label for="TeacherFname">First Name:</label>
            <input type="text" id="TeacherFname" name="TeacherFname" value="@Model.TeacherFName" />

        </div>
        <div class="inputrow">
            <label for="TeacherLname">Last Name:</label>
            <input type="text" id="TeacherLname" name="TeacherLname" value="@Model.TeacherLName" />

        </div>
        <div class="inputrow">
            <label for="TeacherHireDate">HireDate:</label>
            <input type="datetime" id="TeacherHireDate" name="TeacherHireDate" value="@Model.TeacherHireDate" />
        </div>
        <div class="inputrow">
            <label for="TeacherSalary">Salary:</label>
            <input type="number" id="TeacherSalary" name="TeacherSalary" value="@Model.TeacherSalary" />
        </div>
        <div class="inputrow">
            <label for="EmployeeNumber">EmployeeNumber:</label>
            <input type="text" id="EmployeeNumber" name="EmployeeNumber" value="@Model.EmployeeNumber" />
        </div>
        <div class="inputrow">
            <input type="submit" value="Update Teacher"/>
        </div>
    </form>
</div>


<script>

    // Creating a formHandle which has whole form as an object
    var formHandle = document.forms.updateform;

    // Creating variables that access the TeacherFname, TeacherLname and TeacherSalary from the form
    var f_name = formHandle.TeacherFname;
    var l_name = formHandle.TeacherLname;
    var salary = formHandle.TeacherSalary;

    // On submit, checkinput function is called
    formHandle.onsubmit = checkinput;

    // checkinput function is validating the input fields of TeacherFname, TeacherLname, and TeacherSalary
    function checkinput() {
        if (f_name.value === "") {
            f_name.style.background = "red";
            f_name.focus();
            return false;
        }
        else {
            f_name.style.background = "inherit";
        }

        if (l_name.value === "") {
            l_name.style.background = "red";
            l_name.focus();
            return false;
        }
        else {
            l_name.style.background = "inherit";
        }
        if(salary.value < 0 ){
            salary.style.background= "red";
            salary.focus();
            return false;
        }
        else{
            salary.style.background = "inherit";
        }
    }

</script>